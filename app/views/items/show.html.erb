<% content_for :head do %>
  <title><%= @item.title %> | monolist</title>
  <meta name="description" content="<%= @item.title %>に関する情報です。また、HAVE/WANTしているユーザーを表示しています。">
<% end %>

<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% #TODO 商品イメージ %>
          <% if @item.large_image.present? %>
            <%= image_tag(@item.large_image , alt: @item.title) %>
          <% else %>
            <%= image_tag("no-image.png" , alt: @item.title) %>
          <% end %>          
        </div>
      </div>
      <div class="title">
        <% #TODO 商品タイトル %>
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% if @item.have_users.any? %>
            <div class="user_avatars">
              <% @item.have_users.each do |user| %>
                <%= link_to gravatar_for(user, size: 30), user %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
        <% if @item.want_users.any? %>
          <div class="user_avatars">
           <% @item.want_users.each do |user| %>
             <%= link_to gravatar_for(user, size: 30), user %>
           <% end %> 
          </div>
        <% end %>
        
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to '楽天詳細ページへ', @item.detail_page_url %>
      </div>
    </div>
  </div>
</div>
